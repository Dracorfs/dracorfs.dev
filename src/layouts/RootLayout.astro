---
import '../styles/globals.css';
import CursorGradient from '@/components/common/CursorGradient';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Francisco Santopietro | Fullstack Developer', description = 'Frontend Engineer specializing in building accessible, pixel-perfect digital experiences.' } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>
  </head>
  <body class="bg-evergreen-950 leading-relaxed text-evergreen-200 antialiased selection:bg-evergreen-400 selection:text-evergreen-950 font-inter">
    <CursorGradient client:load />
    <slot />
  </body>
</html>
