---
import RootLayout from '@/layouts/RootLayout.astro';
import Sidebar from '@/components/common/Sidebar';
import Hero from '@/components/sections/Hero.astro';
import About from '@/components/sections/About.astro';
import Experience from '@/components/sections/Experience.astro';
import Work from '@/components/sections/Projects.astro';
import Footer from '@/components/common/Footer.astro';

const title = 'Francisco Santopietro';
const description = 'Frontend Engineer specializing in building accessible, pixel-perfect digital experiences.';
---

<RootLayout title={title} description={description}>
  <div class="mx-auto min-h-screen max-w-screen-xl px-6 py-12 font-sans md:px-12 md:py-16 lg:py-0">
    <div class="lg:flex lg:justify-between lg:gap-4">
      <Sidebar client:load />
      <main class="pt-24 lg:w-[52%] lg:py-24">
        <Hero />
        <About />
        <Experience />
        <Work />
        <Footer />
      </main>
    </div>
  </div>
</RootLayout>
